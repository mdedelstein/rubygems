#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative "../spec/support/rubygems_ext"

if RUBY_PLATFORM.match?(/mingw|mswin/)
  Spec::Rubygems.gem_load("rspec-core", "rspec")
elsif RUBY_VERSION.start_with?("2.6")
  Spec::Rubygems.gem_load("parallel_tests", "parallel_rspec")
else
  Spec::Rubygems.gem_load("turbo_tests", "turbo_tests")
end
